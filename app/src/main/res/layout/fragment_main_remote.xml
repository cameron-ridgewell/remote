<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.remote.MainRemote">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/power_buttons">
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/TVPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                fancy:fb_defaultColor="@color/powerbutton"
                fancy:fb_focusColor="@color/powerbutton_pressed"
                fancy:fb_radius="@dimen/curved_button_corner"
                fancy:fb_text="TV Power"
                fancy:fb_textSize="@dimen/primary_button_text"
                fancy:fb_textColor="@color/colorbuttontext" />
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/AVPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_below="@+id/TVPower"
                fancy:fb_borderColor="@color/powerbutton"
                fancy:fb_borderWidth="2.5dp"
                fancy:fb_defaultColor="@color/powerbutton"
                fancy:fb_focusColor="@color/powerbutton_pressed"
                fancy:fb_radius="@dimen/curved_button_corner"
                fancy:fb_text="AV Power"
                fancy:fb_textSize="@dimen/primary_button_text"
                fancy:fb_textColor="@color/colorbuttontext" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:popupBackground="@android:color/transparent"
                android:id="@+id/channelSelect">
            </Spinner>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
