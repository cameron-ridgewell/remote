<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.remote.MainRemote">

    <LinearLayout
        android:id="@+id/topButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!-- Power all -->
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            bootstrap:bb_roundedCorners="true"
            android:id="@+id/power_button"
            android:textSize="25dp"
            bootstrap:bb_icon_right="fa-power-off"
            bootstrap:bb_type="success"
            bootstrap:bb_size="large"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />

        <!--HDMI Channel Select-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerHorizontal="true">
            <View
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/spinner_background"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:background="@drawable/grey_rect_background"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <Spinner
                android:id="@+id/device_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:drawSelectorOnTop="true"
                android:layout_marginLeft="25dp"
                android:popupBackground="@android:color/transparent"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middleButtons"
        android:layout_below="@+id/topButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:paddingLeft="15dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerHorizontal="true">
            <!--Volume Rocker -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/volume_up"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    bootstrap:bb_roundedCorners="true"
                    bootstrap:bb_type="default"
                    android:textSize="20dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text=" + "
                    android:layout_centerHorizontal="true"/>
                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_below="@+id/volume_up"
                    android:id="@+id/volume_down"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    bootstrap:bb_roundedCorners="true"
                    bootstrap:bb_type="default"
                    android:textSize="30dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text=" - "
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">
            <!--KeyPad -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/keypad_1st_row">
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        style="@style/BootstrapButton"
                        android:text=" 1 "
                        android:id="@+id/button_1"
                        android:layout_gravity="left|center_vertical" />
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        style="@style/BootstrapButton"
                        android:text=" 2 "
                        android:id="@+id/button_2"
                        android:layout_gravity="left|center_vertical" />
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        style="@style/BootstrapButton"
                        android:text=" 3 "
                        android:id="@+id/button_3"
                        android:layout_gravity="left|center_vertical" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/keypad_2nd_row"
                    android:layout_below="@+id/keypad_1st_row">
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        style="@style/BootstrapButton"
                        android:text=" 4 "
                        android:id="@+id/button_4"
                        android:layout_gravity="left|center_vertical" />
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        style="@style/BootstrapButton"
                        android:text=" 5 "
                        android:id="@+id/button_5"
                        android:layout_gravity="left|center_vertical" />
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        style="@style/BootstrapButton"
                        android:text=" 6 "
                        android:id="@+id/button_6"
                        android:layout_gravity="left|center_vertical" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/keypad_3rd_row"
                    android:layout_below="@+id/keypad_2nd_row">
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        style="@style/BootstrapButton"
                        android:text=" 7 "
                        android:id="@+id/button_7"
                        android:layout_gravity="left|center_vertical" />
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        style="@style/BootstrapButton"
                        android:text=" 8 "
                        android:id="@+id/button_8"
                        android:layout_gravity="left|center_vertical" />
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        style="@style/BootstrapButton"
                        android:text=" 9 "
                        android:id="@+id/button_9"
                        android:layout_gravity="left|center_vertical" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/keypad_4th_row"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/keypad_3rd_row">
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        style="@style/BootstrapButton"
                        android:text=" 0 "
                        android:id="@+id/button_0"
                        android:layout_gravity="left|center_vertical" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <!--Channel Rocker -->
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/channel_up"
                android:layout_width="70dp"
                android:layout_height="90dp"
                bootstrap:bb_roundedCorners="true"
                bootstrap:bb_type="default"
                android:textSize="20dp"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=" + "
                android:layout_centerHorizontal="true"
                />
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_below="@+id/channel_up"
                android:id="@+id/channel_down"
                android:layout_width="70dp"
                android:layout_height="90dp"
                bootstrap:bb_roundedCorners="true"
                bootstrap:bb_type="default"
                android:textSize="30dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=" - "
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
