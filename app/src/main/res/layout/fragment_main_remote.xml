<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.remote.MainRemote">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/topButtons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <!-- Power all -->
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                bootstrap:bb_roundedCorners="true"
                android:id="@+id/power_button"
                android:textSize="25dp"
                bootstrap:bb_icon_right="fa-power-off"
                bootstrap:bb_type="success"
                bootstrap:bb_size="large"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />
            <!--HDMI Channel Select-->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:layout_gravity="center_horizontal">
                <View
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/spinner_background"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:background="@drawable/grey_rect_background"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"/>

                <Spinner
                    android:id="@+id/device_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:drawSelectorOnTop="true"
                    android:popupBackground="@android:color/transparent"
                    />

            </FrameLayout>

        </LinearLayout>

        <!--KeyPad -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topButtons"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keypad_1st_row">
                <com.beardedhen.androidbootstrap.BootstrapButton
                    style="@style/BootstrapButton"
                    android:text=" 1 "
                    android:id="@+id/button_1"
                    android:layout_gravity="left|center_vertical" />
                <com.beardedhen.androidbootstrap.BootstrapButton
                    style="@style/BootstrapButton"
                    android:text=" 2 "
                    android:id="@+id/button_2"
                    android:layout_gravity="left|center_vertical" />
                <com.beardedhen.androidbootstrap.BootstrapButton
                    style="@style/BootstrapButton"
                    android:text=" 3 "
                    android:id="@+id/button_3"
                    android:layout_gravity="left|center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keypad_2nd_row"
                android:layout_below="@+id/keypad_1st_row">
                <com.beardedhen.androidbootstrap.BootstrapButton
                    style="@style/BootstrapButton"
                    android:text=" 4 "
                    android:id="@+id/button_4"
                    android:layout_gravity="left|center_vertical" />
                <com.beardedhen.androidbootstrap.BootstrapButton
                    style="@style/BootstrapButton"
                    android:text=" 5 "
                    android:id="@+id/button_5"
                    android:layout_gravity="left|center_vertical" />
                <com.beardedhen.androidbootstrap.BootstrapButton
                    style="@style/BootstrapButton"
                    android:text=" 6 "
                    android:id="@+id/button_6"
                    android:layout_gravity="left|center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keypad_3rd_row"
                android:layout_below="@+id/keypad_2nd_row">
                <com.beardedhen.androidbootstrap.BootstrapButton
                    style="@style/BootstrapButton"
                    android:text=" 7 "
                    android:id="@+id/button_7"
                    android:layout_gravity="left|center_vertical" />
                <com.beardedhen.androidbootstrap.BootstrapButton
                    style="@style/BootstrapButton"
                    android:text=" 8 "
                    android:id="@+id/button_8"
                    android:layout_gravity="left|center_vertical" />
                <com.beardedhen.androidbootstrap.BootstrapButton
                    style="@style/BootstrapButton"
                    android:text=" 9 "
                    android:id="@+id/button_9"
                    android:layout_gravity="left|center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keypad_4th_row"
                android:layout_centerInParent="true"
                android:layout_below="@+id/keypad_3rd_row">
                <com.beardedhen.androidbootstrap.BootstrapButton
                    style="@style/BootstrapButton"
                    android:text=" 0 "
                    android:id="@+id/button_0"
                    android:layout_gravity="left|center_vertical" />
                </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
